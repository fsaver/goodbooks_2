<% if @review.present? %>
  <% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new review
</h1>


<hr>

<form action="/create_review" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="book_id">
      Book
    </label>

    <%= select_tag(:book_id, options_from_collection_for_select(Book.all, :id, :title, @review.book_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="format">
      Format
    </label>

    <input type="text" id="format" name="format" class="form-control" value="<%= @review.format %>">
  </div>

  <div class="form-group">
    <label for="pages_read">
      Pages read
    </label>

    <input type="text" id="pages_read" name="pages_read" class="form-control" value="<%= @review.pages_read %>">
  </div>

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @review.rating %>">
  </div>

  <div class="form-group">
    <label for="review">
      Review
    </label>

    <textarea id="review" name="review" class="form-control" rows="3"><%= @review.review %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>
